@model IEnumerable<ParkingSystem.DTO.CustomerModule.CustomerDTO>
@{
	ViewBag.Title = "Index";

}

<link href="~/css/style.css" rel="stylesheet" />


<div class="x_panel shadow p-3  rounded" style="height: 5rem; background-color: #2a3f54;">
	<div class="col-md-10 my-auto">
		<h4 class="top-banner-header">
			Customers
		</h4>
		<p class="text-primary">
			<span>Home</span> <span> <i class="fa fa-angle-double-right"></i> </span>  <span>Customers</span>
		</p>

	</div>

	<div class="col-md-2 my-auto">
		<div class="col-md-12 text-center text-bold">
			<a class="pull-right" href="#" data-toggle="modal" data-target="#ModalCreateCustomer" data-backdrop="static" data-keyboard="false">
				<span class="m-0 p-0 top-banner-add"><i class="fa fa-2x fa-plus-circle" aria-hidden="true"></i></span>
				<h6 class="top-banner-add">Add Customer</h6>
			</a>
		</div>
	</div>

</div>



<div class="x_panel shadow p-3 mb-5 bg-white rounded">
	<div class="x_title">
		<div class="row">
			<div class="col-md-4">
				<h6 class="Header"><i class="fa fa-building"></i>List of Customers</h6>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="x_content">

		<div class="row">
			<div class="col-sm-12">
				<div class="card-box table-responsive">
					<table id="tblCustomer" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">
						<thead>
							<tr>
								<th scope="col">No</th>
								<th scope="col">Full Name</th>
								<th scope="col">Email</th>
								<th scope="col">Phone No</th>
								<th scope="col">Entry Date</th>
								<th scope="col">Car Reg No</th>
								<th scope="col">Options</th>
							</tr>
						</thead>
						<tbody id="tblFilterCustomer">

							@if (Model != null && Model.Count() > 0)
							{
								int count = 1;
								@foreach (var item in Model)
								{
									<tr>
										<td>@count</td>

										<td>@item.FullName</td>

										<td>@item.Email</td>

										<td>@item.PhoneNumber</td>

										<td>@item.CreateDate.ToShortDateString()</td>

										<td>@item.CarRegNo</td>										

										<td>
											<a class=" btn-success  btn-sm" href="#" onclick="GetRecord('@item.Id')" value=""><i class="fa fa-edit"> Edit</i></a>


											<a class=" btn-danger  btn-sm" href="#" onclick="DeleteRecord('@item.Id')" value=""><i class="fa fa-trash"> Delete</i></a>

										</td>
									</tr>

									count++;
								}
							}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>

</div>


<div class="modal fade" id="ModalCreateCustomer" tabindex="-1" role="dialog" aria-labelledby="ModalCreateCustomer" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title Header" id="ModalCreateCustomer">Add Customers</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form id="frmAddCustomer">

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">First Name</label>
							<input type="text" class="form-control myinputs" id="txtFirstName" name="FirstName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Last Name</label>
							<input type="text" class="form-control myinputs" id="txtLastName" name="LastName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Phone Number</label>
							<input type="text" class="form-control myinputs numericOnly" id="txtPhoneNumber" name="PhoneNumber" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Email</label>
							<input type="text" class="form-control myinputs " id="txtEmail" name="Email" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Car Reg No</label>
							<input type="text" class="form-control myinputs " id="txtCarRegNo" name="CarRegNo" aria-describedby="emailHelp">
						</div>
					</div>



				</form>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				<button type="button" id="btnSubmitCustomer" class="btn btn-success">Submit</button>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="ModalEditCustomer" tabindex="-1" role="dialog" aria-labelledby="ModalEditCustomer" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title Header" id="ModalEditCustomer">Update Customer</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form id="frmUpdateCustomer">
					<input type="hidden" id="txtId" name="Id" />


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">First Name</label>
							<input type="text" class="form-control myinputs" id="txtFirstName1" name="FirstName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Last Name</label>
							<input type="text" class="form-control myinputs" id="txtLastName1" name="LastName" aria-describedby="emailHelp">
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Phone Number</label>
							<input type="text" class="form-control myinputs numericOnly" id="txtPhoneNumber1" name="PhoneNumber" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Email</label>
							<input type="text" class="form-control myinputs " id="txtEmail1" name="Email" aria-describedby="emailHelp">
						</div>
					</div>


					<div class="col-md-6">
						<div class="form-group">
							<label for="exampleInputEmail1">Car Reg No</label>
							<input type="text" class="form-control myinputs " id="txtCarRegNo1" name="CarRegNo" aria-describedby="emailHelp">
						</div>
					</div>



				</form>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				<button type="button" id="btnUpdateCustomer" class="btn btn-success">Submit</button>
			</div>
		</div>
	</div>
</div>


<div id="divLoader" style="display:none;" class="loader">
	<img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/GreenParkJs/customers.js"></script>

<script>
	$(document).ready(function () {
		$('#tblCustomer').DataTable();
	});
</script>


